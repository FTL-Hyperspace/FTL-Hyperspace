{
    "name": "HyperspaceBuild",
    "build": {
        "dockerfile": "Dockerfile",
    },
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
            ],
            "settings": {
                "cmake.configureOnOpen": false,
            },
        }
    },
}